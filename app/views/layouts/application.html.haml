!!!
%html
  %head
    %title Some title
    = stylesheet_link_tag :all
    = javascript_include_tag 'jquery.js'
    = javascript_include_tag 'jquery_ujs.js'
    = javascript_include_tag 'jquery.lightbox-0.5.js'
    = javascript_include_tag 'FusionCharts.js'
    = javascript_include_tag 'application.js'
    = csrf_meta_tag
  %body
    #wrap
      #header
        %h3
          SOME SOCIAL NETWORK
        - if user_signed_in?
          = sign_out_link
      #container
        #sidebar
          - if user_signed_in?
            = render 'shared/navigation_menu'
          - else
            = render 'devise/sessions/login_form'
        #main
          = yield
    #footer
      %span
        Footer here