= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  %p
    = f.label :email
    = f.email_field :email

  %p
    = f.label :password
    = f.text_field :password

  %p
    = f.label :firstname
    = f.text_field :firstname
  
  %p
    = f.label :lastname
    = f.text_field :lastname
  
  %p
    = f.label :is_admin
    = f.check_box :is_admin

  .actions
    = f.submit 'Save'
